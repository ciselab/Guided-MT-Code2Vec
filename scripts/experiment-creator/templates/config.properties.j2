# ===== PROGRAM ATTRIBUTES =====

# Should the program use the genetic algorithm (true) or the random algorithm (false)
useGA={{use_genetic_algorithm|default(true,true)}}

# The seed used for the randomness throughout the app
# -1 means a new seed is created on startup
seed={{macro_seed|default(-1,true)}}

# Time until Termination - in Minutes
maxtime={{max_time|default(480,true)}}

# ===== GENETIC ATTRIBUTES =====
# ** Ignored for Random Search **

# How likely is a crossover to appear?
crossoverrate={{crossover_rate|default(0.7,true)}}
# How likely is any single individual to mutate?
mutationrate={{mutation_rate|default(0.4,true)}}
# In case of mutation, how many % will grow? (1-increasrate will shrink)
increaserate={{increase_rate|default(0.7,true)}}
# In case of increase, how many elements are added on average?
growthfactor={{growth_rate|default(3.0,true)}}

# Upper Limit for Gene-Length
maxgenelength={{max_gene_length|default(20,true)}}
# How many Individuals are in one population
populationsize={{population_size|default(10,true)}}
# How many individuals compete in one tournament
tournamentsize={{tournament_size|default(4,true)}}
# After how many unchanged generations do we abort early
maxsteadygenerations={{max_steady_generations|default(4,true)}}

# ===== METRIC ATTRIBUTES =====

# The metrics with their weights.
MRR={{mrr_weight|default(0,true)}}
F1={{f1_weight|default(0,true)}}
PMRR={{pmrr_weight|default(0,true)}}
PREC={{precision_weight|default(0,true)}}
REC={{recall_weight|default(0,true)}}
EDITDIST={{edit_weight|default(0,true)}}

# Secondary metrics
INPUTLENGTH={{input_length_weight|default(0,true)}}
PREDLENGTH={{pred_length_weight|default(0,true)}}
TRANSFORMATIONS={{trans_num_weight|default(0,true)}}




